@using MvcFirmaCagri.Models.Entity
@model List<TblCagrilar>
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-bell-o"></i><span class="badge blue">@ViewBag.m1</span>
    </a>
    <ul class="dropdown-menu">
        <li>
            <div class="notification_header">
                <h3>Aktif Çağrı Bildirimleriniz</h3>
            </div>
        </li>
        @foreach (var item in Model)
        {


        <li>
            <a href="/Default/CagriDetay/@item.ID" class="grid">
                <div class="user_img"><img src="~/web2/starter/assets/images/desk.jpg" alt=""></div>
                <div class="notification_desc">
                    <p>@item.Konu</p>
                    <span>@item.Tarih</span>
                </div>
            </a>
        </li>
        }
        
        <li>
            <div class="notification_bottom">
                <a href="/Default/PasifCagrilar/" class="bg-primary">Tüm çağrıları gör</a>
            </div>
        </li>
    </ul>
</li>
