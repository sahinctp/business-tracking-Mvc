@using MvcFirmaCagri.Models.Entity
@model List<TblMesajlar>
@{
    ViewBag.Title = "GonderilenMesajlar";
    Layout = "~/Views/Shared/FirmaLayout.cshtml";
}
<h2>Gönderilen Mesajlar</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Alıcı</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Tarih</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Alici</td>
            <td>@item.Konu</td>
            <td>@item.Mesaj</td>
            <td>@item.Tarih</td>
            <td>@item.Durum</td>

        </tr>
    }
</table>

