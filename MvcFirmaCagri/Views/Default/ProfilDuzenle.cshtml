@model MvcFirmaCagri.Models.Entity.TblFirmalar
@{
    ViewBag.Title = "ProfilDuzenle";
    Layout = "~/Views/Shared/FirmaLayout.cshtml";
}

<h2> Firma Profil Düzenleme Sayfası</h2>
<br />
@using (Html.BeginForm("ProfilDuzenle", "Default", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Firma Adı")
    @Html.TextBoxFor(z => z.Ad, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Yetkili")
    @Html.TextBoxFor(z => z.Yetkili, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Şifre")
    @Html.PasswordFor(z => z.Sifre, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Sektör")
    @Html.TextBoxFor(z => z.Sektor, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.ID)
    @Html.Label("İl")
    @Html.TextBoxFor(z => z.il, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.ID)
    @Html.Label("İlçe")
    @Html.TextBoxFor(z => z.ilce, new { @class = "form-control" })
    <br />
    @Html.Label("Adres")
    @Html.TextAreaFor(z => z.Adres, 10, 4, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Profil Bilgileri Güncelle</button>
}

